    BNL            "${SITEROOT}/offline/ReleaseData/${AtlasDataArea_native_version}" \
    LBNL           "${SITEROOT}/local/offline/ReleaseData/${AtlasDataArea_native_version}"

macro AtlasDataArea_export_paths "${ATLASCALDATA}" ManaCore ""
####macro AtlasDataArea_native_version current
macro AtlasDataArea_platform "" PACK noarch

