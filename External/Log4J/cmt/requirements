package Log4J

author Julius Hrivnac <Julius.Hrivnac@cern.ch>

branches doc

use JavaSDK JavaSDK-01-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 
use Ant Ant-00-* External

macro LOG4J_VERSION "1.2.14"
macro LOG4J_HOME "${JAVA_BASE}/Log4J/${LOG4J_VERSION}/share"

macro Log4J.core "${LOG4J_HOME}/dist/lib/log4j-${LOG4J_VERSION}.jar"

document installer install_jars "${Log4J.core}" install_dir="$(CMTINSTALLAREA)/share/lib"
apply_pattern install_docs

macro Log4J_export_paths   "${LOG4J_HOME}"
macro Log4J_native_version "${LOG4J_VERSION}"
macro Log4J_platform "" PACK noarch



