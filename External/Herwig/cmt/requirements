package Herwig
use AtlasExternalArea AtlasExternalArea-* External

author  Georgios Stavropoulos <George.Stavropoulos@cern.ch>
author  Ian Hinchliffe <I_Hinchliffe@lbl.gov>  

use LCG_Configuration

# Adapt standard macros for export

macro Herwig_home "$(LCG_external)/MCGenerators/herwig"
macro herwig_native_version "6.520.2"
macro Herwig_native_version "$(herwig_native_version)_lcgcmt$(LCG_config_version)"
macro Herwig_system "$(LCG_ext_system)" \
      slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34"

macro Herwig_lib "$(Herwig_home)/$(herwig_native_version)/$(Herwig_system)/lib"

macro Herwig_linkopts "-L$(Herwig_lib) -lherwig "

macro_prepend Herwig_linkopts "$(Herwig_lib)/hwudat.o "

include_path none
include_dirs "$(Herwig_home)/$(herwig_native_version)/$(Herwig_system)/include"

macro Herwig_export_paths \
      "$(Herwig_lib) $(Herwig_home)/$(herwig_native_version)/$(Herwig_system)/include"

private
macro Herwig_libraries "$(Herwig_lib)/libherwig.so $(Herwig_lib)/libherwig.so.0"
macro Herwig_include_objfiles "yes"
