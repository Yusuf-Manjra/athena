
use AtlasExternalArea AtlasExternalArea-00-* External 

author  Ian Hinchliffe <I_Hinchliffe@lbl.gov>  

macro HERWIG_HOME "${ATLAS_EXTERNAL}/herwig" 
 
macro HERWIG_VERSION "6.4"
 
macro HERWIG_TARGET $(SRT_TARGET) \
      Solaris "sparc-sun-solaris2.7/CC-5.0"
  
macro HERWIG_BASE_DIR "$(HERWIG_HOME)/herwig$(HERWIG_VERSION)/installed/$(HERWIG_TARGET)"
 
macro HERWIG_LIB_DIR "$(HERWIG_BASE_DIR)/lib"  
macro Herwig_linkopts " -L$(HERWIG_LIB_DIR) -lherwig6 -lherdum6" 

include_path none
include_dirs $(HERWIG_HOME)/herwig$(HERWIG_VERSION)/herwig/include


