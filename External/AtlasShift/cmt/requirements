package AtlasShift

#---------------------------
#
# This package is only used to support the export specifications for the 
# libshift.so library.
#
#  It is currently required because of the -lRFIO specified in AtlasROOT
#
# Next releases of ROOT may no longer require libshift at all.
#
#---------------------------

author Christian Arnault <arnault@lal.in2p3.fr>

include_path none
include_dirs $(CASTOR_home)/include

use AtlasExternalArea AtlasExternalArea-* External
use CASTOR v* LCG_Interfaces

path_remove  LD_LIBRARY_PATH   "/$(CASTOR_name)/"
path_append  LD_LIBRARY_PATH   "" \
             noCASTOR          "" \
			 Darwin            "$(CASTOR_home)/$(unixdirname)"
path_remove  DYLD_LIBRARY_PATH "/$(CASTOR_name)/"
path_append  DYLD_LIBRARY_PATH "" \
             noCASTOR          "" \
			 Darwin            "$(CASTOR_home)/$(unixdirname)"
path_remove  PATH              "/$(CASTOR_name)/"
path_append  PATH              "" \
             noCASTOR          "" \
             Darwin            "$(CASTOR_home)/bin"
