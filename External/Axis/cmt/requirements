package Axis

author Julius Hrivnac <Julius.Hrivnac@cern.ch>

use JavaSDK JavaSDK-01-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 
use Ant Ant-00-* External

set AXIS_VERSION "1.4"
set AXIS_HOME    "${JAVA_BASE}/axis/${AXIS_VERSION}/share"

macro AXIS.core      "${AXIS_HOME}/lib/axis.jar"
macro AXIS.ant       "${AXIS_HOME}/lib/axis-ant.jar"
macro AXIS.jaxrpc    "${AXIS_HOME}/lib/jaxrpc.jar"
macro AXIS.logging   "${AXIS_HOME}/lib/commons-logging-1.0.4.jar"
macro AXIS.discovery "${AXIS_HOME}/lib/commons-discovery-0.2.jar"
macro AXIS.saaj      "${AXIS_HOME}/lib/saaj.jar"
macro AXIS.wsdl4j    "${AXIS_HOME}/lib/wsdl4j-1.5.1.jar"
macro AXIS.log4j     "${AXIS_HOME}/lib/log4j-1.2.8.jar"

document installer install_jars "${AXIS.core} \
                                 ${AXIS.ant} \
                                 ${AXIS.jaxrpc} \
                                 ${AXIS.logging} \
                                 ${AXIS.discovery} \
                                 ${AXIS.saaj} \
                                 ${AXIS.wsdl4j} \
				                         ${AXIS.log4j}" install_dir="$(CMTINSTALLAREA)/share/lib"

apply_pattern install_docs

macro Axis_export_paths   "${AXIS_HOME}"
macro Axis_native_version "${AXIS_VERSION}"
macro Axis_platform "" PACK noarch
