package JACE

author Julius Hrivnac <Julius.Hrivnac@cern.ch>

branches doc

use JavaJNI JavaJNI-01-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 
use Ant Ant-00-* External

macro JACE_VERSION "1.1.rc1_04.1.5"
macro JACE_HOME    "${ATLAS_EXTERNAL}/JACE/${JACE_VERSION}"

macro JACE.jar      "${JACE_HOME}/release/lib/jace.jar"
macro JACE.lib      "${JACE_HOME}/release/lib"
macro JACE.so       "${JACE.lib}/linux/gcc/libjaced.so"
macro JACE.include  "${JACE_HOME}/release/include"

document installer install_jars "${JACE.jar}" install_dir="$(CMTINSTALLAREA)/share/lib"
document installer install_sos  "${JACE.so}"  install_dir="$(CMTINSTALLAREA)/${tag}/lib"
apply_pattern install_docs

macro GCC.exe "`which g++`"
macro GCC.lib "`dirname ${GCC.exe}`/../lib"

include_dirs "${JACE.include}"
macro JACE_linkopts "-L${JACE.lib} -ljaced"

macro JACE_export_paths   "${JACE_HOME}"
macro JACE_native_version "${JACE_VERSION}"
