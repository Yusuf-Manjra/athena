package Hijing

use AtlasExternalArea AtlasExternalArea-* External
use LCG_Configuration

author  Georgios Stavropoulos <George.Stavropoulos@cern.ch>
# Adapt standard macros for export

macro Hijing_home "$(LCG_external)/MCGenerators/hijing"
macro Hijing_version "1.383bs.2"
macro Hijing_native_version "$(Hijing_version)_lcgcmt$(LCG_config_version)"
macro Hijing_system "$(LCG_ext_system)" \
      slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34"
macro Hijing_lib "$(Hijing_home)/$(Hijing_version)/$(Hijing_system)/lib"

macro Hijing_linkopts " -L$(Hijing_lib) -lhijing -lhijing_dummy "

macro_prepend Hijing_linkopts "$(Hijing_lib)/ludata.o $(Hijing_lib)/pyhidata.o "

macro Hijing_export_paths \
	"$(Hijing_lib)" 

private
macro Hijing_libraries " $(Hijing_lib)/libhijing.so $(Hijing_lib)/libhijing_dummy.so $(Hijing_lib)/libhijing.so.0 $(Hijing_lib)/libhijing_dummy.so.0"
macro Hijing_include_objfiles "yes"
