package AtlasPyQt4
author  Sebastien Binet <binet@cern.ch>

use AtlasPolicy	  	AtlasPolicy-*		
use ExternalPolicy 	ExternalPolicy-*	External

use pygraphics      v*                  LCG_Interfaces

use AtlasPython 	AtlasPython-*		External
use AtlasQt4		AtlasQt4-*		    External

macro PyQt4_native_version $(pyqt_config_version)
macro PyQt4_home $(pygraphics_home)

private

apply_pattern generic_declare_for_link kind=binaries \
 files='-s=$(pygraphics_home)/bin *' \
 prefix=$(CMTCONFIG)/bin \
 name=pygraphics_binaries

macro pyqt4_ext_pylib "$(pygraphics_home)/lib/python$(Python_version)/site-packages"
apply_pattern generic_declare_for_link kind=python_modules \
 files='-s=$(pyqt4_ext_pylib) * *.py *.so' \
 prefix=$(CMTCONFIG)/lib/python$(Python_version) \
 name=pygraphics_pymodule

end_private

