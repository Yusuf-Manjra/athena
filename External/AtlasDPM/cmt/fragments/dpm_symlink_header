${CONSTITUENT} :: $(bin)${CONSTITUENT}.stamp
	@echo ${CONSTITUENT} ok

$(bin)${CONSTITUENT}.stamp :: $(use_stamps)
	@cd $(bin); \
	  if ! test -f ${source}; then \
	    ln -sf ${dest} ${source}; \
	    echo "Symlink ${source} ==> ${dest} created"; \
	  fi; \
	  touch ${CONSTITUENT}.stamp

${CONSTITUENT}clean ::
	@cd $(bin); /bin/rm -f *.so.* ${CONSTITUENT}.stamp
	echo "dpm symlink cleaned"
