package VBFNLO

author Florian Kiss  <florian.kiss@cern.ch>
 
use ExternalPolicy ExternalPolicy-*   External
 
# Adapt standard macros for export
macro VBFNLO_home  "${SITEROOT}/atlas/offline/external/vbfnlo" \
BNL        "${SITEROOT}/cernsw/vbfnlo" \
LBNL       "${SITEROOT}/sw/vbfnlo" \
EXTSITE    "${SITEROOT}/vbfnlo" \
STANDALONE "${SITEROOT}/vbfnlo"
			 
macro VBFNLO_version "VBFNLO-2.6.3"
macro VBFNLO_native_version "$(VBFNLO_version)_lcgcmt$(LCG_config_version)"
				 
set VBFNLOPATH "$(VBFNLO_home)/$(VBFNLO_version)/Program"
				 
macro VBFNLO_export_paths "$(VBFNLO_home)/$(VBFNLO_version)/Program"
