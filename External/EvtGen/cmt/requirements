#macro LCG_config_version "61g"
macro Evtgen_home "$(LCG_external)/MCGenerators/evtgen"
#macro Evtgen_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(LCG_config_version)/evtgen"
macro EVTGen_native_version "1.4.0"
macro EvtGen_native_version "$(EVTGen_native_version)_lcgcmt$(LCG_config_version)" 

macro EvtGen_system "$(LCG_ext_system)"

macro EVTGEN_BASE_DIR "$(Evtgen_home)/$(EVTGen_native_version)/$(EvtGen_system)"
macro EVTGEN_LIB_DIR "$(EVTGEN_BASE_DIR)/lib"

#macro EvtGen_linkopts "$(EVTGEN_LIB_DIR)/libEvtGen.so $(EVTGEN_LIB_DIR)/libEvtGenExternal.so"
# EvtGenExternal libs no longer linked from the external location - they are included into an inteface to avoid dependencies on Pythia8 and Photos/Tauola versions in the Genser package
macro EvtGen_linkopts "-L$(EVTGEN_LIB_DIR) -lEvtGen "
#macro EvtGen_shlibflags "$(EVTGEN_LIB_DIR)/libEvtGen.so $(EVTGEN_LIB_DIR)/libEvtGenExternal.so"
macro EvtGen_export_paths "$(EVTGEN_LIB_DIR)"

#include_dirs $(EVTGEN_BASE_DIR)/include/EvtGen $(EVTGEN_BASE_DIR)/EvtGenBase/ $(EVTGEN_BASE_DIR)/EvtGenExternal/ $(EVTGEN_BASE_DIR)/EvtGenModels
include_dirs $(EVTGEN_BASE_DIR)/include
apply_pattern declare_installed_libraries dir=$(EVTGEN_LIB_DIR)
macro EvtGen_export_paths "$(EVTGEN_BASE_DIR)"
