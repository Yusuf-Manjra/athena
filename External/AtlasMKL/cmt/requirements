package AtlasMKL
author  Antonio Limosani

## for athena policies: this has to be the first use statement
use AtlasPolicy 	AtlasPolicy-*

use ExternalPolicy	ExternalPolicy-* External

macro AtlasMKL_native_version "xe2016"

macro AtlasMKL_compilers_and_libraries_home "${ATLAS_EXTERNAL}/MKL/IntelSoftware/linux/x86_64/$(AtlasMKL_native_version)/compilers_and_libraries"
macro AtlasMKL_compilers_and_libraries_libdir "$(AtlasMKL_compilers_and_libraries_home)/linux/lib/intel64"

# for kit building

macro AtlasMKL_export_paths "$(AtlasMKL_compilers_and_libraries_libdir)"

set ATLASMKLLIBDIR_PRELOAD $(AtlasMKL_compilers_and_libraries_libdir)
