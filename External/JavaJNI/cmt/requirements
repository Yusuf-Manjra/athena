package JavaJNI

author Julius Hrivnac <Julius.Hrivnac@cern.ch@cern.ch>
author Christian Arnault <arnault@lal.in2p3.fr>

branches doc

use JavaSDK JavaSDK-01-* External 
use AtlasPolicy AtlasPolicy-01-*
use Ant Ant-00-* External

public

macro JDK_BINDIR          "i386" \
                 "x86_64" "amd64"

path_remove LD_LIBRARY_PATH "/jre"
path_append LD_LIBRARY_PATH "${JDK_HOME}/jre/lib/${JDK_BINDIR}"
path_append LD_LIBRARY_PATH "${JDK_HOME}/jre/lib/${JDK_BINDIR}/server"
path_append LD_LIBRARY_PATH "${JDK_HOME}/jre/lib/${JDK_BINDIR}/native_threads"
path_append LD_LIBRARY_PATH "${JDK_HOME}/jre/lib/${JDK_BINDIR}/xawt"

include_dirs "${JDK_HOME}/include" 
include_dirs "${JDK_HOME}/include/linux"

macro JavaJNI_linkopts "-L${JDK_HOME}/jre/lib/ \
                        -L${JDK_HOME}/jre/lib/${JDK_BINDIR}/server \
                        -L${JDK_HOME}/jre/lib/${JDK_BINDIR}/native_threads \
                        -L${JDK_HOME}/jre/lib/${JDK_BINDIR}/xawt \
                        -lmawt -ljava -ljvm -lhpi"

apply_pattern install_docs

macro JavaJNI_native_version "${JDK_VENDOR}_${JDK_FULL_VERSION}"



