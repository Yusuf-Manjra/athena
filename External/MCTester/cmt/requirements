package MCTester
author N. Davidson

use LCG_Configuration

#macro mctester_native_version "1.24.4.root53200"
macro mctester_native_version "1.25.0"
macro MCTester_native_version "$(mctester_native_version)_lcgcmt$(LCG_config_version)"
macro MCTESTER_BASE "$(LCG_external)/MCGenerators/mctester"
macro MCTESTER_SYSTEM "$(LCG_ext_system)" \
      slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34"
macro MCTESTER_DIR "$(MCTESTER_BASE)/$(mctester_native_version)/$(MCTESTER_SYSTEM)"

macro MCTESTER_LIB_DIR "$(MCTESTER_DIR)/lib"


macro MCTester_linkopts "$(MCTESTER_LIB_DIR)/libHepMCEvent.a \
       $(MCTESTER_LIB_DIR)/libMCTester.a \
       $(MCTESTER_LIB_DIR)/libHEPEvent.a \
       $(ROOT_linkopts) -lm -ldl -rdynamic"

include_dirs "$(MCTESTER_DIR)/include"

macro MCTester_pp_cppflags "-isystem $(MCTESTER_DIR)/include "


