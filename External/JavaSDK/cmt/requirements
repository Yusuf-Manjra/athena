package JavaSDK

author Julius Hrivnac <Julius.Hrivnac@cern.ch@cern.ch>
author Chriatian Arnault <arnault@lal.in2p3.fr>

branches doc

use CERNJavaInstallation CERNJavaInstallation-01-* External 

macro JDK_ARCH          "ia32" \
               "64" "amd64" \
	       "Darwin" "Darwin"

set JDK_HOME  "${JAVA_BASE}/JDK/1.6.0/${JDK_ARCH}"
set JAVA_HOME "${JDK_HOME}" target-mac106 ""

set _JAVA_OPTIONS "-Xms64m -Xmx128m"

include_path none

path_remove PATH "/JDK"
path_append PATH "${JDK_HOME}/jre/bin" noJava ""
path_append PATH "${JDK_HOME}/bin" noJava ""

apply_pattern install_docs

macro JavaSDK_export_paths   "${JDK_HOME}"
macro JavaSDK_native_version "1.6.0"

macro JavaSDK_platform "" PACK "${JDK_ARCH}"
