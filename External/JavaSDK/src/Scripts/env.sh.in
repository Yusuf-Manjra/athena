#########################################################################
# JavaSDK (TBD)
# -------
#
# This script sets the environment for the Java SDK
#
# <Julius.Hrivnac@cern.ch>
#########################################################################

if [ -f ./CERNJavaInstallation_env.sh ]; then
	. ./CERNJavaInstallation_env.sh
elif [ -f `dirname $0`/CERNJavaInstallation_env.sh ]; then
	. `dirname $0`/CERNJavaInstallation_env.sh
elif [ -f $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.sh ]; then
	. $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.sh
  fi

if [ "$JDK_VENDOR" = "" ]; then
  if [ "$SRT_ARCH" = "i586-pc-linux-gnu" ]; then
    JDK_VENDOR="ibm"
    fi
  if [ "$SRT_ARCH" = "sparc-sun-solaris2.7" ]; then
    JDK_VENDOR="sun"
    fi
  fi

if [ $JDK_VENDOR = "" ]; then
  echo "JDK not available: nothing done"
  exit
  fi

if [ $JAVA_BASE ]; then
  source $JAVA_BASE/share/bin/setjdk ${JDK_VENDOR} ${JDK_FULL_VERSION-1.3.0}
  echo "JavaSDK $JDK_VENDOR version $JDK_FULL_VERSION environment initialised"
else
	echo "JAVA_BASE not set: nothing done"
  fi
