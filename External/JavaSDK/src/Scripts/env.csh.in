#########################################################################
# JavaSDK (TBD)
# -------
#
# This script sets the environment for the Java SDK
#
# <Julius.Hrivnac@cern.ch>
#########################################################################

if ( -f ./CERNJavaInstallation_env.csh ) then
	source ./CERNJavaInstallation_env.csh
else if ( -f `dirname $0`/CERNJavaInstallation_env.csh ) then
	source `dirname $0`/CERNJavaInstallation_env.csh
else if ( -f $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.csh ) then
	source $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.csh
  endif

if ( "$?JDK_VENDOR" == "" ) then
  if ( "$SRT_ARCH" == "i586-pc-linux-gnu" ) then
    set JDK_VENDOR "ibm"
    endif
  if ( "$SRT_ARCH" == "sparc-sun-solaris2.7" ) then
    set JDK_VENDOR "sun"
    endif
  endif

if ( "$?JAVA_BASE" != 0 || ! "$?JDK_VENDOR" == "" ) then
  if ( "$?JDK_FULL_VERSION" == 0 ) then
    set JDK_FULL_VERSION "1.3.0"
    endif
  source $JAVA_BASE/share/bin/setjdk $JDK_VENDOR $JDK_FULL_VERSION
  echo "JavaSDK $JDK_VENDOR version $JDK_FULL_VERSION environment initialised"
else
	echo "JAVA_BASE not set or Java3D not available: nothing done"
  endif
