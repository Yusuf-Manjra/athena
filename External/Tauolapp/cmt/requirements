package Tauolapp
author M. Wolter, M.Przybycien, L.Adamczyk

use AtlasExternalArea  AtlasExternalArea-* External
use AtlasHepMC         AtlasHepMC-*        External
use AtlasFortranPolicy AtlasFortranPolicy-*
use LCG_Configuration

macro Tauolapp_home "$(LCG_external)/MCGenerators/tauola++"
#macro Tauolapp_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(LCG_config_version)/tauola++"
#macro Tauolapp_home "/afs/cern.ch/sw/lcg/external/MCGenerators_hepmc$(HepMC_config_version)/tauola++"
macro Tauolapp_version "1.1.1a"
macro Tauolapp_native_version "$(Tauolapp_version)_lcgcmt$(LCG_config_version)"
macro Tauolapp_system "$(LCG_ext_system)"
macro Tauolapp_dir "$(Tauolapp_home)/$(Tauolapp_version)/$(Tauolapp_system)"
macro Tauolapp_linkopts " $(Tauolapp_dir)/lib/*.a -lstdc++ "

include_dirs $(Tauolapp_dir)/include
apply_pattern declare_installed_libraries dir=$(Tauolapp_dir)/lib
macro Tauolapp_export_paths "$(Tauolapp_dir)"
