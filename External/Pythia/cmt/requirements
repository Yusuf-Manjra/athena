package Pythia

author  Georgios Stavropoulos <George.Stavropoulos@cern.ch>
author  Ian Hinchliffe <I_Hinchliffe@lbl.gov>  

use AtlasExternalArea AtlasExternalArea-* External
use LCG_Configuration

macro Pythia_home "$(LCG_external)/MCGenerators/pythia6"
macro pythia_native_version "428.2"
macro Pythia_native_version "$(pythia_native_version)_lcgcmt$(LCG_config_version)"
macro Pythia_system "$(LCG_ext_system)" \
      slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34"
macro Pythia_lib "$(Pythia_home)/$(pythia_native_version)/$(Pythia_system)/lib"

# The MacOSX override is because of problems with the libpythia6.dylib linkages since it appears
# to be built against /usr/local/lib/libgfortran.3.dylib whereas our build machine has it at
# /usr/local/gfortran/lib/libgfortran.3.dylib. This needs to be understood and resolved.
macro Pythia_linkopts "-L$(Pythia_lib) -lpythia6" target-darwin "$(Pythia_lib)/libpythia6.a"
macro_append Pythia_linkopts "" target-darwin " $(Pythia_lib)/libpythia6_dummy.a  $(Pythia_lib)/libpythia6_pdfdummy.a"

macro_prepend Pythia_linkopts "$(Pythia_lib)/pydata.o "

macro Pythia_export_paths \
	"$(Pythia_home)/$(pythia_native_version)/$(Pythia_system)"

private
#macro Pythia_libraries "$(Pythia_lib)/libpythia6.so $(Pythia_lib)/libpythia6_dummy.so"
macro Pythia_libraries "$(Pythia_lib)/libpythia6.so $(Pythia_lib)/libpythia6.so.0 $(Pythia_lib)/libpythia6_dummy.so $(Pythia_lib)/libpythia6_dummy.so.0"

macro Pythia_include_objfiles "yes"
