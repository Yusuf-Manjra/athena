package XercesJ

author Julius Hrivnac <Julius.Hrivnac@cern.ch>

branches doc

use JavaSDK JavaSDK-01-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 
use Ant Ant-00-* External

macro XERCESJ_VERSION "2.9.0"
macro XERCESJ_HOME    "${JAVA_BASE}/Xerces/${XERCESJ_VERSION}/share"

macro Xerces.Impl "${XERCESJ_HOME}/xercesImpl.jar"
macro Xerces.API  "${XERCESJ_HOME}/xml-apis.jar"

document installer install_jars "${Xerces.Impl} \
                                 ${Xerces.API}" install_dir="$(CMTINSTALLAREA)/share/lib"

apply_pattern install_docs

macro XercesJ_export_paths   "${XERCESJ_HOME}"
macro XercesJ_native_version "${XERCESJ_VERSION}"
macro XercesJ_platform "" PACK noarch
