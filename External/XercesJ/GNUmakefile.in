TARGET_REMAKE_CONFIGURE	= yes
TARGET_REMAKE_MAKEFILES	= GNUmakefile

TARGET_DATA = XercesJ_env.sh:scripts/XercesJ_env.sh \
              XercesJ_env.csh:scripts/XercesJ_env.csh
TARGET_DOC = doc/:XercesJ

include $(SRT_HOME)/standard.mk
clean:; -rm -f Xerces*
distclean-local:; -rm -f GNUmakefile

XercesJ_env.sh: $(top_srcdir)/src/Scripts/env.sh.in
	cat $(top_srcdir)/src/Scripts/env.sh.in  > XercesJ_env.sh

XercesJ_env.csh: $(top_srcdir)/src/Scripts/env.csh.in
	cat $(top_srcdir)/src/Scripts/env.csh.in  > XercesJ_env.csh
