#########################################################################
# XercesJ (http://xml.apache.org/xerces-j/index.html)
# -------
#
# This script sets the XERCES_JAR environment variable
# and adds it into the CLASSPATH.
#
# <Julius.Hrivnac@cern.ch>
#########################################################################

if ( -f ./CERNJavaInstallation_env.csh ) then
	source ./CERNJavaInstallation_env.csh
else if ( -f `dirname $0`/CERNJavaInstallation_env.csh ) then
	source `dirname $0`/CERNJavaInstallation_env.csh
else if ( -f $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.csh ) then
	source $SRT_DIST/current/installed/share/scripts/CERNJavaInstallation_env.csh
  endif

if ( "$?JAVA_BASE" != 0 ) then
  if ( "XERCES_VERSION" == 0 ) then
    set XERCES_VERSION "1.2.2"
    endif
	setenv XERCES_JAR ${JAVA_BASE}/share/opt/apache/xerces-${XERCES_VERSION}/xerces.jar
	setenv CLASSPATH $XERCES_JAR:$CLASSPATH
  echo "XercesJ version $XERCES_VERSION environment initialised"
else
	echo "JAVA_BASE not set: nothing done"
  endif
