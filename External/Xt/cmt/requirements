package Xt

author ATLAS Software Librarian <ATLAS-Software.Librarian@cern.ch>

use ExternalPolicy ExternalPolicy-00-* External

macro Xt_libs               "/usr/X11R6/lib" \
      target-slc5&target-64 "/usr/lib64" \
      target-slc5           "/usr/lib" \
      target-64             "/usr/X11R6/lib64" 

include_dirs "/usr/include/X11"

macro Xt_linkopts "-L$(Xt_libs) -lXt -lSM -lICE -lXpm -lX11 -lXi -lXext"

# CMT explicitly sets up the -L<path>, but incorrectly!
macro_remove X_linkopts  "" \
             target-slc5 "-L/usr/X11R6/lib"

path_remove LD_LIBRARY_PATH "$(Xt_libs)"
path_append LD_LIBRARY_PATH "$(Xt_libs)"

