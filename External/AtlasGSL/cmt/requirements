package AtlasGSL

author David Quarrie      <David.Quarrie@cern.ch>

use ExternalPolicy ExternalPolicy-00-* External
use GSL v* LCG_Interfaces

macro_remove GSL_linkopts "" \
             notAsNeeded  "" \
             asNeeded     "-lgslcblas"
macro_append GSL_linkopts "" \
             notAsNeeded  "" \
             asNeeded     "  $(notAsNeeded_linkopt) -lgslcblas $(asNeeded_linkopt) "
#
# Export macros
#
macro GSL_export_paths "$(GSL_home)/bin \
                        $(GSL_home)/lib \
                        $(GSL_home)/include" 

