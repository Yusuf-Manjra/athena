package Powheg

author Daniel Hayden <danhayden0@googlemail.com>

use ExternalPolicy ExternalPolicy-*   External

macro Powheg_home  "${SITEROOT}/atlas/offline/external/powhegbox" \
        BNL        "${SITEROOT}/cernsw/powhegbox" \		
        LBNL       "${SITEROOT}/sw/powhegbox" \
        EXTSITE    "${SITEROOT}/powhegbox" \
        STANDALONE "${SITEROOT}/powhegbox"

macro Powheg_native_version "ATLASOTF-00-03-03"
	
macro Powheg_dir "${Powheg_home}/${Powheg_native_version}"
	
set POWHEGPATH "$(Powheg_dir)/POWHEG-BOX"
	
macro Powheg_export_paths "$(Powheg_dir)"
	
apply_pattern install_external_home
