package AtlasInlineAssistant

author ravitillo@lbl.gov

use ExternalPolicy ExternalPolicy-00-* External

macro inlineassistant_native_version "1.0"

macro inlineassistant_home "${ATLAS_EXTERNAL}/InlineAssistant/${inlineassistant_native_version}/${CMTCONFIG}"

macro inlineassistant_libs "${inlineassistant_home}/lib"
macro inlineassistant_bin  "${inlineassistant_home}/bin"

path_remove LD_LIBRARY_PATH "${inlineassistant_libs}"
path_append LD_LIBRARY_PATH "${inlineassistant_libs}"

path_remove PATH "${inlineassistant_bin}"
path_append PATH "${inlineassistant_bin}"
