package AtlasCORAL

author RD Schaffer <R.D.Schaffer@cern.ch>

# Simple interface package to LCGCMT version of the COOL

use ExternalPolicy ExternalPolicy-00-* External
use CORAL          v*                  LCG_Interfaces
use AtlasReflex      AtlasReflex-00-*      External -no_auto_imports

apply_tag NEEDS_CORAL_RELATIONAL_ACCESS

# Add MacOSX-specific conditional dependency on AtlasOracle package in order to setup 
# DYLD_LIBRARY_PATH for Oracle plugin in case it's needed
macro atlascoral_use_oracle "" host-darwin "AtlasOracle AtlasOracle-* External -no_auto_imports"
use $(atlascoral_use_oracle)
