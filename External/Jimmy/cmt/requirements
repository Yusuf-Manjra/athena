package Jimmy
use AtlasExternalArea AtlasExternalArea-* External
use LCG_Configuration

author  Georgios Stavropoulos <George.Stavropoulos@cern.ch>
author  Jon Butterworth <J.Butterworth@ucl.ac.uk>  

# Adapt standard macros for export


macro Jimmy_home "$(LCG_external)/MCGenerators/jimmy"
macro jimmy_native_version "4.31.3"
macro Jimmy_native_version "$(jimmy_native_version)_lcgcmt$(LCG_config_version)"
macro Jimmy_system "$(LCG_ext_system)" \
	slc4&gcc43&32 "slc4_ia32_gcc34" \
	slc4&gcc43    "slc4_amd64_gcc34"
macro Jimmy_lib "$(Jimmy_home)/$(jimmy_native_version)/$(Jimmy_system)/lib/archive"

macro Jimmy_linkopts "$(Jimmy_lib)/libjimmy.a"

include_path none
include_dirs "$(Jimmy_home)/$(jimmy_native_version)/$(Jimmy_system)/include"

macro Jimmy_export_paths \
      "$(Jimmy_home)/$(jimmy_native_version)/$(Jimmy_system)"
