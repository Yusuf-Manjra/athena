package Pythia8

author James Monk

use AtlasPolicy           AtlasPolicy-*
use AtlasExternalArea     AtlasExternalArea-*     External
use AtlasHepMC            AtlasHepMC-*            External
use Lhapdf                Lhapdf-*                External
use LCG_Configuration

#macro Pythia8_home "$(LCG_external)/MCGenerators/pythia8"
macro Pythia8_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(LCG_config_version)/pythia8"
#macro Pythia8_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt61g/pythia8"
macro Pythia8_version "186"
macro Pythia8_patch_version ""
macro Pythia8_native_version "$(Pythia8_version)$(Pythia8_patch_version)_lcgcmt$(LCG_config_version)"
macro Pythia8_system "$(LCG_ext_system)"
macro Pythia8_dir "$(Pythia8_home)/$(Pythia8_version)$(Pythia8_patch_version)/$(Pythia8_system)"
macro Pythia8_lib "$(Pythia8_dir)/lib"
macro Pythia8_include "$(Pythia8_dir)/include"
macro Pythia8_xmldoc "$(Pythia8_dir)/xmldoc"
#macro Pythia8_xmldoc "$(Pythia8_home)/$(Pythia8_version)$(Pythia8_patch_version)/share/xmldoc"
macro Pythia8_linkopts "-L$(Pythia8_lib) -lpythia8 -lpythia8tohepmc"
macro Pythia8_export_paths "$(Pythia8_lib) $(Pythia8_include) $(Pythia8_xmldoc)"

macro Pythia8_pp_cppflags " -DHEPMC2"
macro Pythia8_pp_fflags   " -DHEPMC2"

apply_pattern declare_installed_libraries dir=$(Pythia8_lib)

apply_pattern generic_declare_for_link kind=runtime prefix=$(tag)/share/Pythia8/xmldoc files="$(Pythia8_xmldoc)/*.xml $(Pythia8_xmldoc)/*.dat $(Pythia8_xmldoc)/*.data $(Pythia8_xmldoc)/*.pds $(Pythia8_xmldoc)/*.tex $(Pythia8_xmldoc)/*.tbl $(Pythia8_xmldoc)/*.eps"
#apply_pattern generic_declare_for_link kind=runtime prefix=$(tag)/share files="$(Pythia8_xmldoc)/*.xml"

include_path none
include_dirs $(Pythia8_include)

