dnl Initialisation
AC_PREREQ(2.12)
AC_INIT(PACKAGE)
SRT_INIT

dnl Configure this package
SRT_CONFIG_LOCAL

# define version number 

 AC_SUBST(MySQL_VERSION)
 : ${MySQL_VERSION="3.22.32"}
 

# for installation on other sites  

if test -n "$SRT_SITE" ; then
  if test -r "$SRT_SITE/config/MySQL"; then
    . "$SRT_SITE/config/MySQL" ||
      AC_MSG_ERROR([cannot source $SRT_SITE/config/MySQL])
  fi
fi

dnl Generate makefiles
SRT_OUTPUT(GNUmakefile)
