package AtlasPyCrypto
author  Sebastien Binet <binet@cern.ch>

use AtlasExternalArea 	AtlasExternalArea-*	External
use AtlasPython 	AtlasPython-*		External

macro PyCrypto_native_version "2.0.1"

macro PyCrypto_home "${ATLAS_EXTERNAL}/PyCrypto/${PyCrypto_native_version}/${CMTCONFIG}"

macro PyCrypto_pypath "$(PyCrypto_home)/lib/python${Python_version}/site-packages"

include_path none

path_remove  PYTHONPATH "/PyCrypto/"
path_prepend PYTHONPATH "$(PyCrypto_pypath)"
