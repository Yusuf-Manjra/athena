package DataCollection

use AtlasCxxPolicy AtlasCxxPolicy-*
use TDAQCPolicyExt v* TDAQCPolicy 

include_path none

macro        DataCollection_linkopts "$(tdaqc_linkopts)"
macro_append DataCollection_linkopts \
             " -leformat -leformat_write -lDataReader -leformat_old"
macro_append DataCollection_linkopts \
             " -lRawFileName -lDataWriter -ldl -lers "

path_remove PYTHONPATH "/tdaq-common/"
path_append PYTHONPATH "$(tdaq-common_home)/installed/share/lib/python"
path_append PYTHONPATH "$(tdaq-common_home)/installed/$(CMTCONFIG)/lib"

path_remove ROOT_INCLUDE_PATH "/tdaq-common/"
path_append ROOT_INCLUDE_PATH "$(tdaq-common_home)/installed/include"

