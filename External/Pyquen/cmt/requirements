package Pyquen
author  Anndrzej Olszewski<Andrzej.Olszewski@ifj.edu.pl>  

use AtlasPolicy AtlasPolicy-*
use AtlasExternalArea AtlasExternalArea-* External
use LCG_Configuration

public
macro Pyquen_home "$(LCG_external)/MCGenerators/pyquen"
macro pyquen_native_version "1.5.1"
macro Pyquen_native_version $(pyquen_native_version)_lcgcmt$(LCG_config_version) 


macro Pyquen_dir "$(Pyquen_home)/$(pyquen_native_version)/$(LCG_ext_system)" 
macro Pyquen_lib "$(Pyquen_dir)/lib" 

macro Pyquen_linkopts "-L$(Pyquen_lib) -lpyquen "

macro Pyquen_export_paths "$(Pyquen_lib)"

private
macro Pyquen_libraries " $(Pyquen_lib)/libpyquen.so $(Pyquen_lib)/libpyquen.so.0 "
