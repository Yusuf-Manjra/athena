package YODA

author Andy Buckley <andy.buckley@cern.ch>
author James Monk <jmonk@hep.ucl.ac.uk>

use AtlasPolicy AtlasPolicy-*
use LCG_Configuration
use AtlasExternalArea          AtlasExternalArea-*     External

## Uncomment line below to test with YODA installation in /afs/.cern.ch
#macro LCG_ROOT "/afs/.cern.ch/sw/lcg"
#macro myLCG_config_version "67c"

#macro YODA_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(myLCG_config_version)/yoda"
macro YODA_home "$(LCG_external)/MCGenerators/yoda"
macro YODA_version "1.5.5"
macro YODA_native_version "$(YODA_version)_lcgcmt$(LCG_config_version)"
macro YODA_dir "$(YODA_home)/$(YODA_version)/$(LCG_ext_system)"
macro YODA_lib "$(YODA_dir)/lib"
macro YODA_bin "$(YODA_dir)/bin"
macro YODA_python "$(YODA_dir)/lib/python${Python_version}/site-packages"
macro YODA_linkopts "-L$(YODA_lib) -lYODA"

macro YODA_export_paths "$(YODA_dir)"
macro YODA_follow_symlinks "y"

## Install libraries
apply_pattern declare_installed_libraries dir="$(YODA_lib) "

## Install headers
include_path none
include_dirs $(YODA_dir)/include

## Install scripts
apply_pattern declare_scripts files=" -s=$(YODA_bin) *"
path_prepend PATH "$(YODA_bin)"

## Install Python modules
apply_pattern generic_declare_for_link kind=python_modules \
  files='-s=$(YODA_python) * *.py *.so' prefix="$(CMTCONFIG)/lib/python$(Python_version)" name=yoda_pymodules
path_prepend PYTHONPATH "$(YODA_python)"
