package AtlasCLHEP

author ATLAS Software Librarian <ATLAS-Software.Librarian@cern.ch>

use ExternalPolicy ExternalPolicy-00-* External
use CLHEP v* LCG_Interfaces

#macro AtlasCLHEP_native_version "$(CLHEP_native_version)"
#macro AtlasCLHEP_home           "$(CLHEP_home)"
#macro AtlasCLHEP_dir            "$(AtlasCLHEP_home)"

macro AtlasCLHEP_native_version "2.2.0.4"
macro AtlasCLHEP_home           "/afs/cern.ch/sw/lcg/external/clhep/2.2.0.4/x86_64-slc6-gcc49-opt"
macro AtlasCLHEP_dir            "/afs/cern.ch/sw/lcg/external/clhep/2.2.0.4/x86_64-slc6-gcc49-opt"


macro_remove CLHEP_linkopts "" \
             notAsNeeded    "" \
             asNeeded       "-lCLHEP-$(CLHEP_native_version)"
macro_append CLHEP_linkopts "" \
             notAsNeeded    "" \
             asNeeded       " $(notAsNeeded_linkopt) -lCLHEP-$(CLHEP_native_version) $(asNeeded_linkopt) "

macro CLHEP_pp_cppflags " -DCLHEP_MAX_MIN_DEFINED -DCLHEP_ABS_DEFINED -DCLHEP_SQR_DEFINED "
macro CLHEP_pp_fflags " -DCLHEP_MAX_MIN_DEFINED -DCLHEP_ABS_DEFINED -DCLHEP_SQR_DEFINED "

macro AtlasCLHEP_export_paths "$(AtlasCLHEP_dir)"
macro AtlasCLHEP_include "$(AtlasCLHEP_dir)/include"

include_path none
include_dirs "$(AtlasCLHEP_include)"

apply_pattern set_root_include_path

