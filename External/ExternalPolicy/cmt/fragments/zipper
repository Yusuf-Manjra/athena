

${CONSTITUENT} :: ${FULLNAME}
	@if test -f ${FULLNAME}; then set -x; root=`echo ${FILEPATH} | sed -e 's#[.][.]/[/]*##'`; \
	  echo installing $${root}${NAME}${FILESUFFIX} into $(kits_dir); \
	  cd ..; \
	  if test ! -d $(kits_dir) ; then mkdir -p $(kits_dir); fi; \
	  if test -f $(kits_dir)/${CONSTITUENT}$(version).tar; then zip_option="-u"; else zip_option="-c"; fi; \
	  $(zip_command) $${zip_option} -f $(kits_dir)/${CONSTITUENT}$(version).tar $${root}${NAME}${FILESUFFIX}; \
	fi

${CONSTITUENT}clean ::
	@rm -f $(kits_dir)/${CONSTITUENT}$(version).tar

	


