
${CONSTITUENT} :: ${PACKAGE_ROOT}/ant/config-CMT.properties
	/bin/mkdir -p ${PACKAGE_ROOT}/lib
	ant ${antoptions} -buildfile ${FULLNAME} ${properties} ${anttarget}

${PACKAGE_ROOT}/ant/config-CMT.properties :: ${FULLNAME}
	cmt show sets   | sed s/\'//g >  ttt
	cmt show macros | sed s/\'//g >> ttt
	cmt filter ttt ${PACKAGE_ROOT}/ant/config-CMT.properties
	echo "top=${PACKAGE_ROOT}"                 >> ${PACKAGE_ROOT}/ant/config-CMT.properties
	cat "${ANTROOT}/ant/standard.properties"   >> ${PACKAGE_ROOT}/ant/config-CMT.properties
	echo "config.db=${ANTROOT}/ant"            >> ${PACKAGE_ROOT}/ant/config-CMT.properties
	echo "name=`cmt show macro_value package`" >> ${PACKAGE_ROOT}/ant/config-CMT.properties

${FULLNAME} :: ${ANTROOT}/ant/default.xml
	/bin/mkdir -p ${PACKAGE_ROOT}/ant
	if [ ! -f ${FULLNAME} ]; then /bin/cp ${ANTROOT}/ant/default.xml ${FULLNAME}; fi

${CONSTITUENT}clean :: ${PACKAGE_ROOT}/ant/config-CMT.properties
	ant ${antoptions} -buildfile ${FULLNAME} ${properties} clean
	/bin/rm -f ${PACKAGE_ROOT}/ant/config-CMT.properties
	
