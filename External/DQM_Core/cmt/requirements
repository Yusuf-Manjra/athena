package DQM_Core

author David Quarrie <David.Quarrie@cern.ch>

use ExternalPolicy ExternalPolicy-* External
use dqm_core *

include_path none
include_dirs $(dqm_core_cmtpath)/installed/include

macro dqm_core_base $(dqm_core_cmtpath)/installed/${CMTCONFIG}
macro dqm_core_lib  $(dqm_core_base)/lib
macro dqm_core_linkopts "-L$(dqm_core_lib) $(dqm_core-linkopts) -ldqm_core_io -ldqm_core -ldqm_dummy_io -ldqm_dummy"

path_remove LD_LIBRARY_PATH "/dqm-common/"
path_append LD_LIBRARY_PATH "$(dqm_core_lib)"
path_remove DYLD_LIBRARY_PATH "" Darwin "/dqm-common/"
path_append DYLD_LIBRARY_PATH "" Darwin "$(dqm_core_lib)"
path_remove PATH "/dqm-common/"
path_append PATH "$(dqm_core_base)/bin"
path_remove PYTHONPATH "/dqm-common/"
path_append PYTHONPATH "$(dqm_core_cmtpath)/installed/share/lib/python"
