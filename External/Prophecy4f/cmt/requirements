package Prophecy4f

author Antonio Salvucci <antonio.salvucci@cern.ch>

use ExternalPolicy ExternalPolicy-*   External

# Adapt standard macros for export
macro Prophecy4f_home "${SITEROOT}/atlas/offline/external/prophecy4f" \
        BNL         "${SITEROOT}/cernsw/prophecy4f" \
        LBNL        "${SITEROOT}/sw/prophecy4f" \
        EXTSITE     "${SITEROOT}/prophecy4f" \
        STANDALONE  "${SITEROOT}/prophecy4f"

macro Prophecy4f_native_version "Prophecy4f-2.0.1_mod1"

set PROPHECYPATH "$(Prophecy4f_home)/$(Prophecy4f_native_version)"

macro Prophecy4f_export_paths "$(Prophecy4f_home)/$(Prophecy4f_native_version)"

apply_pattern install_external_home
