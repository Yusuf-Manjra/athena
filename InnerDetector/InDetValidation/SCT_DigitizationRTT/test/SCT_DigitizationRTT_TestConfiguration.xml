<?xml version="1.0"?>
<!DOCTYPE unifiedTestConfiguration SYSTEM "http://www.hep.ucl.ac.uk/atlas/AtlasTesting/DTD/unifiedTestConfiguration.dtd">

<unifiedTestConfiguration>
   <rtt xmlns="http://www.hep.ucl.ac.uk/atlas/AtlasTesting/rtt">

      <rttContactPerson>John Chapman (John.Chapman@cern.ch)</rttContactPerson>
      <mailto>chapman@NOSPAMhep.phy.cam.ac.uk</mailto>
      <refRelease>13.10.0</refRelease>
      
      <jobList>

      <classification>
         <displayClass>OfflineValidation</displayClass>
         <displayProcess>Digi</displayProcess>
         <displayComponent>Det-InDet</displayComponent>
      </classification>

         <athena userJobId="SCTDigiRTTJob" >
            <doc> SCT Digitisation check </doc>
            <options>SCT_DigitizationRTT/SCT_DigitizationRTTDigiOptions</options>
            <package>SCT_DigitizationRTT</package>
            <group>SCTDigiRTT</group>
            <queue>long</queue>
            <dataset>/eos/atlas/atlascerngroupdisk/proj-sit/digitization/RTT/SCT_SingleMuons/mc10_7TeV.107370.singlepart_mu_pt6_50_GeV.simul.HITS.e628.pool.root</dataset>
         </athena>
      </jobList>

      <jobGroups>
         <jobGroup name="AthenaSCTDigiRTT" parent="Athena">
            <keepFilePattern>*.log</keepFilePattern> 
            <keepFilePattern>*.php</keepFilePattern> 
            <keepFilePattern>*.xml</keepFilePattern>
            <keepFilePattern>*.root</keepFilePattern>

            <auxFilePattern>SCT*.xml</auxFilePattern>

            <test position="1">
               <modulename>RttLibraryTools</modulename>
               <testname>DCubeRunner</testname>
               <arg>
                 <argname>DCubeCfg</argname>
                 <argvalue>SCT_DigitizationRTT_dcube_cfg.xml</argvalue>
               </arg>
               <arg> 
                 <argname>DCubeRef</argname>
                 <argvalue>SCT_DigitizationRTTRefHists.root</argvalue>
               </arg>
               <arg>
                 <argname>DCubeMon</argname>
                 <argvalue>SCT_DigitizationRTTHists.root</argvalue>
               </arg>
            </test>
         </jobGroup>
      </jobGroups>
   </rtt>
</unifiedTestConfiguration>
