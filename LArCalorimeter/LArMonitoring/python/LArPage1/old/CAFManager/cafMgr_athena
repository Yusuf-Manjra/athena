#! /bin/zsh

# Wrapper script that runs a command in batch

workdir=$1
runargs=$2
jobopts=$3

export CAFRELDIR=$workdir

echo "args = $workdir $runargs $jobopts"
date
source /afs/cern.ch/user/l/larcomm/w0/digitMon/cafEnv
export PATH=/afs/cern.ch/user/l/larcomm/w0/digitMon/RelTool:$PATH
cd $workdir
pwd
source ./setup

echo "== Listing checked out packages"
od=$PWD
for d in **/cmt; do (echo "in $d :"; cd $d; svn info | grep URL); done
cd $od
echo "== Listing done"

printenv
cd `dirname $0`  # go back to the temporary job directory
pwd
date
echo "athena -s $runargs $jobopts"
athena -s $runargs $jobopts
date
