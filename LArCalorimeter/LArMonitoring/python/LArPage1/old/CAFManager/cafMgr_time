#! /usr/bin/env python_sqlite

import sys
from Logger import Logger, OutputStream
from FileAccessor import FileAccessor

def time(args) :
  if len(args) <= 1 : return Logger(OutputStream()).ERROR('Not enough arguments')
  path = args[-1]
  files = FileAccessor(path, OutputStream()).getFiles()
  for f in files : 
    ff = FileAccessor(f, OutputStream())
    Logger(OutputStream()).INFO(f + ' ' + str(ff.time()))
  return True

time(sys.argv)
