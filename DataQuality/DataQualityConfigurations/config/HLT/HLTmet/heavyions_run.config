#######################
# HLTmet
#######################

#######################
# Output
#######################

output top_level {
  output HLT {
    output TRMET {
      output Shifter {
        output L1 {
          output Primary {
          }
        }
      }
    }
  }
}

#######################
# Histogram Assessments
#######################

dir HLT {
  algorithm = HLT_Histogram_Not_Empty&GatherData

  ##############################
  # begin METMon
  ##############################

  dir METMon {
    dir Shifter {
      dir L1 {
        dir Primary {
          hist L1_MET {
             output          = HLT/TRMET/Shifter/L1/Primary
          }
          hist L1_METx {
             output          = HLT/TRMET/Shifter/L1/Primary
          }
          hist L1_METy {
             output          = HLT/TRMET/Shifter/L1/Primary
          }
          hist L1_SumEt {
             output          = HLT/TRMET/Shifter/L1/Primary
          }
        }
      }
    } ## end Shifter

  } ## end METMon
} ## end HLT

