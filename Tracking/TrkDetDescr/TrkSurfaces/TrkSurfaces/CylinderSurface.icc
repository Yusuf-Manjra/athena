}



/** Use the Surface as a ParametersBase constructor, from local parameters -
 * charged */
inline Surface::ChargedTrackParametersUniquePtr
CylinderSurface::createUniqueTrackParameters(double l1,
                                       double l2,
                                       double phi,
                                       double theta,
                                       double qop,
                                       AmgSymMatrix(5) * cov) const
{
  return std::make_unique<ParametersT<5, Charged, CylinderSurface>>(
    l1, l2, phi, theta, qop, *this, cov);
}

